      <option value="jg.imgtitle ASC">JC_SLDIMGSORT_TITELASC_LBL</option>
      <option value="jg.imgdate DESC">JC_SLDIMGSORT_DATEDESC_LBL</option>
      <option value="jg.imgdate ASC">JC_SLDIMGSORT_DATEASC_LBL</option>
      <option value="jg.hits DESC">JC_SLDIMGSORT_HITSDESC_LBL</option>
      <option value="jg.hits ASC">JC_SLDIMGSORT_HITSASC_LBL</option>
      <option value="vote DESC, jg.imgvotesum DESC">JC_SLDIMGSORT_VOTEDESC_LBL</option>
      <option value="vote ASC, jg.imgvotesum ASC">JC_SLDIMGSORT_VOTEASC_LBL</option>
