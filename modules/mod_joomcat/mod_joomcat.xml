      <option value="0">JC_NO_LBL</option>
      <option value="1">JC_YES_LBL</option>
    </param>
    <param name="cfg_sldarrows" type="radio" default="0" label="JC_SLDARROWS_LBL" description="JC_SLDARROWS_DESC">
      <option value="0">JC_NO_LBL</option>
      <option value="1">JC_YES_LBL</option>
    </param>
