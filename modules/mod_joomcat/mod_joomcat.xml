    <param name="cfg_itemid" type="text" default="" label="JC_ITEMID_LBL" description="JC_ITEMID_DESC"/>  
    <param name="cfg_catmode" type="list" default="0" label="JC_CATMODE_LBL" description="JC_CATMODE_DESC">
